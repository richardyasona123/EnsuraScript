{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ens",
  "scopeName": "source.ens",
  "displayName": "EnsuraScript",
  "aliases": ["ensurascript", "ensura"],
  "fileTypes": ["ens"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#booleans" },
    { "include": "#conditions" },
    { "include": "#handlers" },
    { "include": "#resource-types" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ens",
          "match": "#.*$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.ens"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ens",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ens",
              "match": "\\\\."
            },
            {
              "name": "variable.other.env.ens",
              "match": "env:[A-Za-z_][A-Za-z0-9_]*"
            },
            {
              "name": "variable.other.file.ens",
              "match": "file:[^\"]*"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ens",
          "match": "\\b(ensure)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(on|when)\\b"
        },
        {
          "name": "keyword.other.ens",
          "match": "\\b(with|as|in)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(requires|after|before)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(apply)\\b"
        },
        {
          "name": "storage.type.ens",
          "match": "\\b(resource|policy|invariant|assume)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(for|each)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(violation)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(retry|notify)\\b"
        },
        {
          "name": "keyword.control.ens",
          "match": "\\b(parallel)\\b"
        }
      ]
    },
    "conditions": {
      "patterns": [
        {
          "name": "support.function.ens",
          "match": "\\b(exists|readable|writable|encrypted|permissions|checksum|content)\\b"
        },
        {
          "name": "support.function.ens",
          "match": "\\b(running|stopped|healthy|stable)\\b"
        },
        {
          "name": "support.function.ens",
          "match": "\\b(listening|reachable|status_code|tls)\\b"
        },
        {
          "name": "support.function.ens",
          "match": "\\b(scheduled|backed_up)\\b"
        }
      ]
    },
    "handlers": {
      "patterns": [
        {
          "name": "constant.other.ens",
          "match": "\\b(AES:256|AES:128)\\b"
        },
        {
          "name": "support.class.ens",
          "match": "\\b(fs|http|cron|process|service|backup|db)\\.(native|get|post|put|delete)\\b"
        },
        {
          "name": "support.type.ens",
          "match": "\\b(posix)\\b"
        },
        {
          "name": "variable.parameter.ens",
          "match": "\\b(key|mode|expected_status|expected)\\b"
        }
      ]
    },
    "resource-types": {
      "patterns": [
        {
          "name": "storage.type.ens",
          "match": "\\b(file|directory|http|database|service|process|cron)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.ens",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.ens",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.assignment.ens",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.ens",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.ens",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.ens",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.block.begin.ens",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.ens",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.ens",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.ens",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.ens",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.ens",
          "match": "\\]"
        },
        {
          "name": "punctuation.separator.ens",
          "match": ","
        },
        {
          "name": "punctuation.terminator.ens",
          "match": ";"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.ens",
          "match": "\\b(environment)\\b"
        },
        {
          "name": "entity.name.function.policy.ens",
          "match": "(?<=policy\\s+)[a-z_][a-z0-9_]*"
        },
        {
          "name": "entity.name.tag.alias.ens",
          "match": "(?<=as\\s+)[a-z_][a-z0-9_]*"
        }
      ]
    }
  }
}
